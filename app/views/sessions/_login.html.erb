<div class="modal hide fade" id="my-modal">

  <div class="modal-body a-unique-class">
    <div class="container-fluid">
    <h1>Sign in</h1>
    <div class="row">
      <div class="column">
        <%=form_for(:session, url: sessions_path) do |f|%>
        <%=f.label :usuario%>
        <%=f.text_field :usuario%>
        <%=f.label :password%>
        <%=f.password_field :password%>
        <p class="center">
          <%=f.submit "Sign in", class: "btn btn-main"%>
        </p>
        <% end %>
        <p class="center">New User? <%=link_to "Sign Up", new_user_path%></p>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
  </div>
</div>
</div>
