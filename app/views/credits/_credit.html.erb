<li>
  <h4>
    <span class="content span4">
    <%= credit.credito %></br>
    <small>
    Saldo:<%=credit.saldoInicial%>
    </small>
  </span>
  </h4>

  <%= link_to 'Editar', edit_credit_path(credit), class: "btn btn-edit" %>
  <%= link_to 'Eliminar', credit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-delete" %>
  <button id="mostrar" data-toggle="collapse" data-target="#amortizacion<%=credit.id%>" class="span10 btn-show">Mostrar amortizacion</button>
  <div id="amortizacion<%=credit.id%>" class="collapse span10">
  <table class="table table-hover">
  <tr id="head">
    <th>Periodo</th>
    <th>Fecha</th>
    <th>Pago Interes (<%=credit.tasaInteres%>% Anual)</th>
    <th>Pago Capital</th>
    <th>Pago Amortizacion</th>
    <th>Saldo Final</th>
  </tr>
  <%
  saldoInicial=credit.saldoInicial
  fechaInicio=credit.fechaInicio
  plazo=credit.plazo
  tasaInteres=credit.tasaInteres/12.to_f
  interes=tasaInteres*plazo+100
  saldoInteres=saldoInicial*100/interes%>
  <% for i in 0..plazo do%>
  <%if i == 0%>
  <%fecha=fechaInicio>>i%>
  <%(pagoInteres=0)%>
  <%(pagoCapital=0)%>
  <%(pagoTotal=0)%>
  <%(saldoFinal=saldoInicial-i*saldoInicial/plazo).round(2)%>
  <%else%>
  <tr id="content">
    <td><%=i%></td>
    <td><%=fecha=fechaInicio>>i%></td>
    <td><%=(pagoInteres=saldoInteres/plazo).round(2)%></td>
    <td><%=(pagoCapital=saldoInicial/plazo-pagoInteres).round(2)%></td>
    <td><%=(pagoTotal=pagoCapital+pagoInteres).round(2)%></td>
    <td><%=(saldoFinal=saldoInicial-i*saldoInicial/plazo).round(2)%></td>
  </tr>
  <%end%>
  <%@amortizacion.push([fecha,pagoInteres,pagoCapital,pagoTotal,saldoFinal])%>
  <%end%>
</table>
</div>
</li>
