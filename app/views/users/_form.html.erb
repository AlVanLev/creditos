<% provide(:title,'Registro')%>
<%= form_for(@user) do |f| %>
<div class="row">
  <div class="span6 offset3">
    <%= render 'shared/error_messages'%>


  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :usuario %><br>
    <%= f.text_field :usuario %>
  </div>
  <div class="field">
    <%= f.label :contraseña %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirmar_Contraseña %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit "Continuar", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
</div>
</div>
